<div class="col-md-4">
	<%= form_for ([@post, @post.comments.build ]) do |f| %>

	<div class="form-group">
		<%= f.label :name %>
	    <%= f.text_field :name, class: 'form-control' %>
	</div>

	<div class="form-group">
	  <%= f.label :body %>
	  <%= f.text_area :body, class: 'form-control' %>
	</div>
	
	

	<%= f.submit "Save", class: 'btn btn-primary' %>
<% end %>

</div>
