<div class="container-fluid mt-3">
<h3><%= @post.title %></h3>
<p>submitted at: <%= time_ago_in_words(@post.created_at) %> ago</p>
<p><%= @post.content %></p>

<table>
	<tbody>
		<% if user_signed_in? %>
		<td><%= link_to "Edit", edit_post_path(@post.id), class: 'btn btn-primary' %></td>
		<td><%= button_to "Delete", post_path(@post.id), method: :delete, class: 'btn btn-danger' %>
</td>
<% end %>
		<td><%= link_to "Back", posts_path, class: 'btn btn-secondary' %></td>
	</tbody>
</table>

	<br><h2><%= @post.comments.count%> Comments</h2>
	<%= render @post.comments %>
	<h3>Join Discussion</h3>
	<%= render "comments/form" %>

</div>

