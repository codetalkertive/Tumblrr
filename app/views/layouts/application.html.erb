<!DOCTYPE html>
<html>
  <head>
    <title>Tumblrr</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- Bootstrap core CSS -->
  <link href="stylesheets/bootstrap.min.css" rel="stylesheet">

  <!-- Custom styles for this template -->
  <link href="stylesheets/simple-sidebar.css" rel="stylesheet">
  </head>

  <body>
    <div class="d-flex" id="wrapper">

    <!-- Sidebar -->
    <div class="bg-light border-right" id="sidebar-wrapper">
      <div class="sidebar-heading"><%= link_to "Tumblr", root_path %></div>
      <div class="list-group list-group-flush">
        
        <%= link_to "Posts", root_path, class: "list-group-item list-group-item-action bg-light" %>
        <%= link_to "About", about_path, class: "list-group-item list-group-item-action bg-light" %>
        <% if !user_signed_in? %>
        <%= link_to "Login", new_user_session_path, class: "list-group-item list-group-item-action bg-light" %>
        <% end %>
        
      </div>
    </div>
    <!-- /#sidebar-wrapper -->

    <!-- Page Content -->
    <div id="page-content-wrapper">

      <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
        <button class="btn btn-primary" id="menu-toggle">Toggle Menu</button>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-md-auto">

            <% if user_signed_in? %>

            <li class="nav-item active">
              <%= link_to "Create Posts", new_post_path %>
              <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
            </li>
            <% end %>
            
          </ul>
        </div>
      </nav>

      <div class="container-fluid">
        
        <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>

        <%= yield %>
      </div>
    </div>
    <!-- /#page-content-wrapper -->

  </div>
    


    <script src="config/jquery.min.js"></script>
  <script src="config/bootstrap.bundle.min.js"></script>
  </body>
</html>
